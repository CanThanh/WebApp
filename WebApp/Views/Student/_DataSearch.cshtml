@model Common.SearchResultModel<List<Model.Student>>

@Html.HiddenFor(m=>m.TotalRecord)

<table class="table table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @if (Model == null || Model.Data.Count == 0)
    {
        <tr>
            <td colspan="4">Không có dữ liệu</td>
        </tr>
    }
    else
    {
        foreach (var item in Model.Data)
        {
            <tr>
                <td>@((Model.PageIndex - 1) * Model.PageSize + Model.Data.IndexOf(item) + 1)</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td class="text-center">
                    <a href="javascript:void(0);" onclick="AddOrEdit(@item.Id)" data-toggle="tooltip" data-placement="left" title="Sửa thông tin"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="javascript:void(0);" onclick="Remove(@item.Id)" data-toggle="tooltip" data-placement="left" title="Sửa thông tin"> <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>